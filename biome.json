{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!packages/ui/.storybook",
      "!packages/ui/src/styles/globals.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "linter": {
    "domains": {
      "next": "recommended"
    },
    "enabled": true,
    "rules": {
      "complexity": {
        "noForEach": "warn",
        "noImplicitCoercions": "error",
        "noUselessStringConcat": "error",
        "noVoid": "warn",
        "useSimplifiedLogicExpression": "warn",
        "useWhile": "warn"
      },
      "correctness": {
        "noGlobalDirnameFilename": "warn",
        "noNestedComponentDefinitions": "warn",
        "noNodejsModules": "error",
        "noProcessGlobal": "warn",
        "useSingleJsDocAsterisk": "warn",
        "useUniqueElementIds": "error"
      },
      "nursery": {
        "noEqualsToNull": "warn",
        "noNextAsyncClientComponent": "warn",
        "noScriptUrl": "warn",
        "noSyncScripts": "warn"
      },
      "performance": {
        "noNamespaceImport": "error",
        "noReExportAll": "warn"
      },
      "recommended": true,
      "style": {
        "noCommonJs": "error",
        "noDefaultExport": "error",
        "noMagicNumbers": "warn",
        "noNestedTernary": "error",
        "useObjectSpread": "error",
        "useThrowNewError": "error",
        "useThrowOnlyError": "error"
      },
      "suspicious": {
        "noAlert": "error",
        "noConstantBinaryExpressions": "error",
        "noEvolvingTypes": "error",
        "noUnassignedVariables": "error",
        "noUnknownAtRules": "info",
        "useGuardForIn": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "apps/*/src/app/**/page.tsx",
        "apps/*/src/app/**/layout.tsx",
        "apps/*/src/app/**/template.tsx",
        "apps/*/src/app/**/error.tsx",
        "apps/*/src/app/**/loading.tsx",
        "apps/*/src/app/**/not-found.tsx",
        "apps/*/src/app/**/route.ts",
        "apps/*/src/app/**/default.tsx",
        "**/*.mjs",
        "**/*.stories.tsx",
        "**/*.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
